      <section id="carrito">
        <h2>CARRITO DE COMPRAS</h2>
        <!--Productos del carrito de compras-->
        <section id="productos">
          <% data.forEach(element => { %>
          <article class="articulos">
            <figure>
              <img src="<%= element.image %>" />
            </figure>
            <section class="textoProductos">
              <h4 class="nombreProducto"><%= element.title %></h4>
              <p><%= element.type %></p>
              <p><%= element.description %></p>
              <a href="" id="sumaResta">- 1 +</a>
            </section>
            <a href=""><i class="fa-solid fa-trash-can tachoProductos"></i></a>
            <h4 class="precio">$<%= element.price %></h4>
          </article>
          <% }) %>
        </section>

