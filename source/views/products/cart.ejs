<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <header><%- include('../partials/header.ejs') %></header>
    <main>
      <figure>
        <img src="images/banner.jpg" alt="banner" id="main_banner" />
      </figure>
      <section id="mainSection">
        <h2>CARRITO DE COMPRAS</h2>
        <!--Productos del carrito de compras-->
        <section id="cart">
          <% data.forEach(element => { %>
          <article class="cart_products">
            <figure>
              <img src="<%= element.image %>" />
            </figure>
            <section class="cart_products_text">
              <h4><%= element.name %></h4>
              <p><%= element.type %></p>
              <p><%= element.location %></p>
              <a href="" class="sumaResta">- 1 +</a>
            </section>
            <a href=""><i class="fa-solid fa-trash-can tachoProductos"></i></a>
            <h4 class="cart_products-price">$<%= element.price %></h4>
          </article>
          <% }) %>
        </section>

        <!--Ventana con el total de la compra-->
        <section id="total">
          <h3>RESUMEN DE COMPRAS</h3>
          <!--ElecciÃ³n del tipo de envio-->
          <form action="/cart" method="get">
            <fieldset id="total_send">
              <label for="envio" id="selector"
                >Seleccione el tipo de envio</label
              >
              <section>
                <input
                  type="radio"
                  name="envio"
                  id="domicilio"
                  value="domicilio"
                />
                <label for="domicilio">Envio a domicilio</label>
              </section>
              <section>
                <input
                  type="radio"
                  name="envio"
                  id="tienda"
                  value="domicilio"
                />
                <label for="domicilio">Retiro en tienda</label>
              </section>
            </fieldset>
          </form>
          <section id="total_buy">
            <h4 id="total_buy-title">Total: $21.811</h4>
            <a href="" id="botonCompra">Iniciar compra</a>
            <a href="/search" id="botonSeguirComprando">Seguir comprando</a>
          </section>
        </section>
      </section>
    </main>
    <footer><%- include('../partials/footer.ejs') %></footer>
  </body>
</html>
