<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>

  <body>
    <header><%- include('./partials/header.ejs') %></header>
    <main>
      <figure>
        <img src="/images/banner.jpg" alt="banner" id="main_banner" />
      </figure>
      <section class="main_grilla">
        <h2>OFERTAS</h2>
        <% data.forEach(element=> { %>
        <article class="main_articulos">
          <figure>
            <img src="/<%= element.image %> " />
          </figure>
          <h4 class="main_articulos-texto"><%= element.name %></h4>
          <h4 class="main_articulos-texto">$<%= element.price %></h4>
          <form action="/cart" method="get">
            <button class="articulos_boton">Comprar</button>
          </form>
          <!--
          <form action="/product/<%= element.id %>" method="get">
            <button class="articulos_boton">+Info</button>
          </form>
          -->
          <a href="/product/<%= element.id %>" class="articulos_boton">+Info</a>
        </article>
        <% }) %>

        <h2>NOVEDADES</h2>
        <% data.forEach(element=> { %>
        <article class="main_articulos">
          <figure>
            <img src="/<%= element.image %> " />
          </figure>
          <h4 class="main_articulos-texto"><%= element.name %></h4>
          <h4 class="main_articulos-texto">$<%= element.price %></h4>
          <form action="/cart" method="get">
            <button class="articulos_boton">Comprar</button>
          </form>
          <form action="/product/<%= element.id %>" method="get">
            <button class="articulos_boton">+Info</button>
          </form>
        </article>
        <% }) %>
      </section>
    </main>
    <footer><%- include('./partials/footer.ejs') %></footer>
  </body>
</html>
